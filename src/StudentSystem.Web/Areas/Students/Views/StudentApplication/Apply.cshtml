@model BecomeStudentBindingModel

<div class="container mt-5">
    <div class="col-md-4 offset-md-4 bg-white p-4 shadow rounded">
        <h2 class="text-center mb-4">
            <span class="border-bottom border-info">Become Student</span>
        </h2>
        <form method="post">
            <div class="form-group mb-3">
                <input asp-for="FirstName" type="text" class="form-control p-2" placeholder="First Name">
                <span asp-validation-for="FirstName" class="text-danger error"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="LastName" type="text" class="form-control p-2" placeholder="Last Name">
                <span asp-validation-for="LastName" class="text-danger error"></span>
            </div>
            <div class="form-group mb-3">
                <select asp-for="CityId" class="form-select">
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>
            <div class="text-center">
                <button type="submit" class="w-75 btn btn-primary shadow p-2">Apply</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}