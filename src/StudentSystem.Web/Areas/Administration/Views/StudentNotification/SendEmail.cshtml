@model EmailInformationBindingModel

@{
    this.ViewData["Title"] = "Send Email";
}

@section HeadScripts
{
    @{
        await Html.RenderPartialAsync("_TinymceScriptsPartial");
    }
}

<div class="col-md-8 offset-md-2 bg-white p-4 shadow rounded mt-5">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="form-control p-2">
            <span asp-validation-for="Subject" class="error"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="p-2"> </textarea>
            <span asp-validation-for="Content" class="error"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Attachments"></label>
            <input asp-for="Attachments" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="SelectedCourses"></label>
            <select asp-for="SelectedCourses" class="selectpicker form-control" data-live-search="true">
                @foreach (var course in Model.Courses)
                {
                    <option value=@course.Id>@course.Name</option>
                }
            </select>
            <span asp-validation-for="SelectedCourses" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="w-25 btn btn-success shadow p-2">Send</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}